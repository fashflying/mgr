<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="mgr.wfengine.domain">
	<class name="Flow" table="Flow">
		<id name="id" column="flowId"></id>
		<property name="name" type="string"></property>
		<property name="title" type="string"></property>
		<property name="lastVersion" type="integer"></property>
		<property name="company" type="integer"></property>
		<set name="flowInstances" inverse="true">
			<key column="flowId"></key>
			<one-to-many class="FlowInstance"/>
		</set>
		<set name="versions" cascade="save-update">
			<key column="flowId"></key>
			<one-to-many class="FlowVersion"/>
		</set>
	</class>
</hibernate-mapping>