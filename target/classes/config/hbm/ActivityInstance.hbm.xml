<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="mgr.wfengine.domain">
	<class name="ActivityInstance" table="ActivityInstance">
		<id name="id" column="activityInstanceId">
			<generator class="uuid"></generator>
		</id>
		<property name="activityType" type="string"></property>
		<property name="activityId" type="string"></property>
		<property name="name" type="string"></property>
		<property name="flowId" type="string"></property>
		<property name="participant" type="string"></property>
		<property name="datas" type="text"></property>
		<property name="datasUpdated" type="text"></property>
		<property name="createTime" type="timestamp"></property>
		<property name="finishTime" type="timestamp"></property>
		<property name="state">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">mgr.wfengine.domain.Enums$ActivityInstanceState</param>
			</type>
    	</property>
		<many-to-one name="parent" column="parentId" class="ActivityInstance"></many-to-one>
		<set name="childActivityInstances" inverse="true">
			<key column="parentId"></key>
			<one-to-many class="ActivityInstance"/>
		</set>
		<property name="flowInstanceId" type="string" insert="false" update="false"></property>
		<many-to-one name="flowInstance" column="flowInstanceId" class="FlowInstance"></many-to-one>
		<set name="mergeInstances" table="mergeActivity" cascade="all">
			<key column="activityInstanceId"></key>
			<many-to-many column="mergeInstanceId" class="MergeInstance"/>
		</set>
	</class>
</hibernate-mapping>